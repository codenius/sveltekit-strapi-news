/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	body {
		@apply bg-white text-black dark:bg-gray-800 dark:text-white;
	}

	h1 {
		@apply text-6xl;
	}

	h2 {
		@apply text-5xl pb-3;
	}

	h3 {
		@apply text-4xl;
	}

	h4 {
		@apply text-3xl;
	}

	h5 {
		@apply text-2xl;
	}

	h6 {
		@apply text-xl;
	}

	p {
		@apply text-lg pb-4;
	}
}
